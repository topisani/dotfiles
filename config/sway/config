# For https://github.com/topisani/sway-fade
# Install with cargo install sway-fade
# Fade in
for_window [app_id=.*] opacity 0
for_window [app_id=.*] exec sway-fade -t 0.25 in
for_window [app_id=.*] mark fade

# Fade out
bindsym $mod+q mark quit; exec sway-fade out

exec swayidle -w \
     timeout 300 'swaylock -f -c 18191c' \
     timeout 600 'swaymsg "output * dpms off"' \
     resume 'swaymsg "output * dpms on"' \
     before-sleep 'swaylock -f -c 000000' &

