# -*- mode: conf; tab-width: 4 -*-

super + {h,j,k,l}
	waitron window_cardinal_focus {left,down,up,right}

super + shift + {h,j,k,l}
	waitron window_cardinal_move {left,down,up,right}

super + ctrl + {h,j,k,l}
	waitron window_cardinal_grow {left,down,up,right}

super + ctrl + shift + {h,j,k,l}
	waitron window_cardinal_shrink {left,down,up,right}

super + shift + q
	waitron wm_quit 0

super + shift + r
	wmcl reload

super + m
	waitron window_maximize

super + q
	waitron window_close

super + b
	waitron window_hor_maximize

super + v
	waitron window_ver_maximize

super + f
	waitron window_monocle

alt + Tab
	waitron window_cycle

alt + shift + Tab
	waitron window_rev_cycle

alt + ctrl + Tab
	waitron window_focus_last

super + p
	waitron workspace_set_bar 0 2

super + {_,shift +}{1-9}
	waitron {workspace_goto,workspace_add_window} {1-9}

super + {_,shift +} 0
	waitron {workspace_goto,workspace_add_window} 10

