[user]
	email = mail@topisani.dev
	name = Tobias Pisani
[credential]
	helper = store
[github]
	user = topisani
[color]
	ui = auto
[core]
	whitespace = -trailing-space,-indent-with-non-tab,-tab-in-indent
	pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
	diffw = diff -w -U0 --word-diff-regex=[^[:space:]]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	ignore = update-index --skip-worktree
	unignore = update-index --no-skip-worktree
	ignored = !git ls-files -v | grep \"^S\"
	# git dft runs difftool, which runs difftastic, which gives a diff with semantic context
	dft = difftool
	pushf = push --force-with-lease --force-if-includes
[diff]
	tool = difftastic

[difftool]
	prompt = false

[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"

[pager]
	difftool = true

[interactive]
	diffFilter = (diff-so-fancy --patch)
	
[pull]
	rebase = true

[url "git@github.com:"]
	pushInsteadOf = https://github.com/

[init]
	defaultBranch = master
[push]
	autoSetupRemote = true

[url "gitlab-as-move:move-innovation/"]
	insteadOf = https://gitlab.com/move-innovation/
	
[url "gitlab-as-move:move-innovation/"]
	insteadOf = git@gitlab.com:move-innovation/
	
[push]
	default = current
[commit]
	template = /home/topisani/.config/git/gitmessage.txt
	verbose = true
[rerere]
	enabled = true
	autoupdate = true
[merge]
	conflictstyle = diff3
[rebase]
	autoSquash = true
	autoStash = true

