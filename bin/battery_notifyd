#!/bin/bash

not_id=$(shuf -i 10000-100000 -n 1)

last_bat=$(query_bat)
while true; do
    bat=$(query_bat)
    sl=60
    if [[ $bat -lt 16 ]] && ! acpi | grep Charging; then
        dunstify -u 2 -i battery-empty-symbolic "Battery Low!" "$bat%" -r $not_id
    else
        dunstify -C $not_id
    fi
    last_bat=$bat
    sleep $sl
done
