#!/bin/sh

# exec wezterm start -- "$@"
# exit $?

setup_term() {
    export TERM=tmux-256color
    exec tmux new-session "$*"\; set destroy-unattached on\; set status off\; attach
    # zellij
}

if [ "$1" == "--setup" ]; then
    shift;
    setup_term "$*"
else
    args="$*"
    # alacritty --title="Terminal" -e sh -c "$0 --setup $args"
    ghostty --gtk-single-instance=true --command="$0 --setup $args"
fi
