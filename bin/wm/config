#!/bin/bash
# Set environment variables for the wm

# FILES & DIRECTORIES #########################################################

export WM_SCRIPT_DIR=$HOME/.bin/wm

# All temporary files go here
export WM_TMP_DIR=/tmp/wm_$(whoami)

export WM_CONFIG_DIR=$HOME/.config/wm

# THEME #######################################################################

# Color definitions {{{
C0="$(xrq '*color0')"
C1="$(xrq '*color1')"
C2="$(xrq '*color2')"
C3="$(xrq '*color3')"
C4="$(xrq '*color4')"
C5="$(xrq '*color5')"
C6="$(xrq '*color6')"
C7="$(xrq '*color7')"
C8="$(xrq '*color8')"
C9="$(xrq '*color9')"
C10="$(xrq '*color10')"
C11="$(xrq '*color11')"
C12="$(xrq '*color12')"
C13="$(xrq '*color13')"
C14="$(xrq '*color14')"
C15="$(xrq '*color15')"
CFG="$(xrq '*foreground')"
CBG="$(xrq '*.background')"
# }}}
